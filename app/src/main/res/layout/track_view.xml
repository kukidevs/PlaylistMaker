<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:id="@+id/trackLayout"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    >
        <ImageView
            android:layout_width="@dimen/imageSearchTrackSize"
            android:layout_height="@dimen/imageSearchTrackSize"
            android:id="@+id/trackIcon"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginBottom="@dimen/padding_8dp"
            android:layout_marginEnd="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/m13dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="@dimen/padding_song"
            android:paddingBottom="@dimen/padding_song">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackName"
                android:fontFamily="@font/ys_display_regular"
                tools:text="Shoot To Thrill"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/songNameSearch"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trackAuthor"
                    tools:text="AC/DC"
                    android:textColor="?attr/paddingBottomNoButtons"
                    android:textSize="@dimen/songAuthorSearch"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/separator_dot"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/spaced"
                    app:tint="?attr/paddingBottomNoButtons" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trackLength"
                    tools:text="5:17"
                    android:textColor="?attr/paddingBottomNoButtons"
                    android:textSize="@dimen/songAuthorSearch"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/padding_8dp"
            android:layout_height="@dimen/padding_song"
            android:src="@drawable/arrow_forward"
            app:tint="?attr/paddingBottomNoButtons"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/icon_size_settings"
            />
    </LinearLayout>
